{% extends 'base.html.twig' %}

{% block body %}

    <div class="container" >
        <h1 style="text-align: center">Généracteur de report pour Entreprises </h1>
        <h4 style="text-align: center">Entrez le numéro d'affaire pour retrouver la ou les entreprise(s) qui y sont liés</h4>
        <br/>
        <div class="row justify-content-center" style="margin-left: auto; margin-right: auto">
            <form class="col-md-10" action="{{ path('report/getProject') }}" method="post">
                <div class="row">
                    <div class="form-group col-md-12">
                        <label for="refAffaire">Numéro affaire</label>
                        <input class="form-control" id="refAffaire" name="refAffaire" type="text">
                    </div>

                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <input class="btn btn-primary" style="width: 100%" type="submit" value="Suivant">
                    </div>
                </div>

            </form>

        </div>

    </div>
{% endblock %}